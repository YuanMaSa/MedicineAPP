<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.carrie.carrie_test1.Beacon">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_above="@+id/bottomBar3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView38"
                android:layout_width="250sp"
                android:layout_height="30sp"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:text="Wireless＆ Network"
                android:textSize="8pt" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="5sp"
                    android:layout_height="30sp"
                    android:layout_margin="10sp"
                    android:layout_marginTop="0sp"
                    android:layout_weight="2"
                    android:background="@drawable/battery" />

                <TextView
                    android:id="@+id/textView39"
                    android:layout_width="250sp"
                    android:layout_height="50sp"
                    android:layout_margin="10sp"
                    android:layout_weight="1"

                    android:text="Battery : 83 %"
                    android:textColor="#FFFFFF"
                    android:textSize="10pt" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_marginTop="0sp"
                    android:layout_margin="10sp"
                    android:layout_weight="2"
                    android:background="@drawable/bluetooth" />

                <TextView
                    android:id="@+id/textView40"
                    android:layout_width="250sp"
                    android:layout_height="50sp"
                    android:layout_margin="10sp"
                    android:layout_weight="1"

                    android:text="Bluetooth"
                    android:textColor="#FFFFFF"
                    android:textSize="10pt" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_marginTop="0sp"
                    android:layout_margin="10sp"
                    android:layout_weight="2"
                    android:background="@drawable/microphone" />

                <TextView
                    android:id="@+id/textView46"
                    android:layout_width="250sp"
                    android:layout_height="50sp"
                    android:layout_margin="10sp"
                    android:layout_weight="1"

                    android:text="Tag 警示音"
                    android:textColor="#FFFFFF"
                    android:textSize="10pt" />

            </LinearLayout>


            <TextView
                android:id="@+id/textView41"
                android:layout_width="250sp"
                android:layout_height="30sp"
                android:layout_margin="10sp"
                android:layout_weight="1"

                android:text="Device"
                android:textColor="#FFFFFF"
                android:textSize="8pt" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_margin="10sp"
                    android:layout_marginTop="0sp"
                    android:layout_weight="2"
                    android:background="@drawable/speaker" />

                <TextView
                    android:id="@+id/textView42"
                    android:layout_width="250sp"
                    android:layout_height="50sp"
                    android:layout_margin="10sp"
                    android:layout_weight="1"

                    android:text="低電量提醒"
                    android:textColor="#FFFFFF"
                    android:textSize="10pt" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="0dp">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_margin="10sp"
                    android:layout_marginTop="0sp"
                    android:layout_weight="2"
                    android:background="@drawable/distance" />

                <TextView
                    android:id="@+id/textView43"
                    android:layout_width="250sp"
                    android:layout_height="50sp"
                    android:layout_margin="10sp"
                    android:layout_weight="1"

                    android:text="距離提醒"
                    android:textColor="#FFFFFF"
                    android:textSize="10pt" />

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottomBar3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        >

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottomNavView_Bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="2dp"
            app:menu="@menu/bottom_bar"
            android:background="#218790">


        </android.support.design.widget.BottomNavigationView>
    </RelativeLayout>
</RelativeLayout>



</RelativeLayout>
