<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#4498A5"
    tools:context="com.example.carrie.carrie_test1.FirstSaveBsBpActivity">

    <!-- Login progress -->
    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:text="血糖量測時間"
                android:textSize="22sp"/>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/bsfirstsave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="上午"
                    android:imeOptions="actionUnspecified"
                    android:inputType="time"
                    android:maxLines="1"
                    android:onClick="setTime1"
                    android:singleLine="true"
                    />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/bsSecondSave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="中午"
                    android:imeOptions="actionUnspecified"
                    android:inputType="time"
                    android:maxLines="1"
                    android:onClick="setTime2"
                    android:singleLine="true"
                    />

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/bsThirdSave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="晚上"
                    android:imeOptions="actionUnspecified"
                    android:inputType="time"
                    android:maxLines="1"
                    android:onClick="setTime3"
                    android:singleLine="true"
                    />

            </android.support.design.widget.TextInputLayout>
            <TextView
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="血壓量測時間"
                android:textSize="22sp"/>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/bpfirstsave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="上午"
                    android:imeOptions="actionUnspecified"
                    android:inputType="time"
                    android:maxLines="1"
                    android:onClick="setTime4"
                    android:singleLine="true"
                    />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/bpSecondSave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="中午"
                    android:imeOptions="actionUnspecified"
                    android:inputType="time"
                    android:maxLines="1"
                    android:onClick="setTime5"
                    android:singleLine="true"
                    />

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/bpThirdSave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="晚上"
                    android:imeOptions="actionUnspecified"
                    android:inputType="time"
                    android:maxLines="1"
                    android:onClick="setTime6"
                    android:singleLine="true"
                    />

            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/saveMeasueFirst"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="儲存"
                android:textStyle="bold"
                android:onClick="gotoMainActivity1"/>
            <Button
                android:id="@+id/saveMeasueIgnore"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="略過"
                android:textStyle="bold"
                android:onClick="gotoMainActivity1"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
