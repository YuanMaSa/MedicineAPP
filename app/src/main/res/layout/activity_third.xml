                    <!--</android.support.design.widget.TextInputLayout>-->
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <TextView
                            android:id="@+id/txttime"
                            android:layout_width="125dp"
                            android:layout_height="100dp"
                            android:layout_alignBottom="@+id/btnAdd"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="25dp"
                            android:text="每日提醒時間"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="#8E8E8E"
                            android:textSize="9pt" />

                        <ImageButton
                            android:id="@+id/btnAdd"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="130dp"
                            android:layout_marginTop="18dp"
                            android:layout_toRightOf="@id/txttime"
                            android:background="@drawable/add1"
                            android:contentDescription="@string/btnAdd" />

                    </RelativeLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/time1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp">

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="0sp"
                            android:layout_marginLeft="50dp"
                            android:textColor="#FAFAFA"
                            android:textSize="9pt"/>
                    </android.support.design.widget.TextInputLayout>

                    <LinearLayout
                        android:id="@+id/scrollView1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <LinearLayout
                            android:id="@+id/linearLayoutForm"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"></LinearLayout>

                    </LinearLayout>

                    <Button
                        android:id="@+id/btnDisplay"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:text="@string/btnDisplay" />

                </LinearLayout>


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView18"
                            android:layout_width="95dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="25dp"
                            android:text="藥品項目"
                            android:textColor="#8E8E8E"
                            android:textSize="9pt" />

                        <ImageButton
                            android:id="@+id/adddrug"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_toRightOf="@+id/textView18"
                            android:background="@drawable/add2"
                            android:contentDescription="@string/btnAdd" />

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/scrollView2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/newdrug1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/newdrug"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"></LinearLayout>
                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>


                </LinearLayout>

            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/textbeacon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="25dp"
                    android:layout_weight="1"
                    android:text="Beacon"
                    android:textColor="#8E8E8E"
                    android:textSize="9pt" />

                <Spinner
                    android:id="@+id/spinnerbeacon"
                    android:layout_width="150dp"
                    android:layout_height="42sp"
                    android:layout_marginRight="70dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/thirdsettext"
                    android:textColor="#272727"
                    ></Spinner>
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="50dp"
                android:gravity="center">


                <Button
                    android:id="@+id/m_store"
                    android:layout_width="20dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="120dp"
                    android:layout_marginRight="120dp"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/buttonthird"
                    android:onClick="checkinsert"
                    android:text="儲存"
                    android:textSize="55px" />


            </TableRow>


        </TableLayout>

    </ScrollView>
</LinearLayout>