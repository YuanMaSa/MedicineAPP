<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context="com.example.carrie.carrie_test1.FirstActivity">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp">

        <TableRow
            android:layout_width="280sp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/searchText2"
                    android:layout_width="200sp"
                    android:layout_height="45sp"
                    android:layout_marginBottom="5sp"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="0sp"
                    android:layout_marginTop="30sp"
                    android:layout_weight="1"
                    android:background="@drawable/back"
                    android:ems="10"
                    android:hint="輸入..."
                    android:inputType="textPersonName"
                    android:textColor="#000000"
                    android:textColorHint="#BEBEBE"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="37dp" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="5sp"
                    android:layout_marginLeft="1sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="30sp"
                    android:background="@drawable/search"
                    tools:layout_editor_absoluteX="259dp"
                    tools:layout_editor_absoluteY="148dp" />

            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="300sp"
            android:layout_height="match_parent"
            android:layout_marginTop="10sp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="80sp"
                    android:layout_height="30sp"
                    android:layout_marginLeft="30sp"
                    android:layout_weight="1"
                    android:background="@drawable/hot"
                    android:gravity="center"
                    android:text="#普拿疼"
                    android:textColor="#5B5B5B" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="100sp"
                    android:layout_height="30sp"
                    android:layout_marginLeft="5sp"
                    android:layout_weight="1"
                    android:background="@drawable/hot"
                    android:gravity="center"
                    android:text="#斯斯感冒"
                    android:textColor="#5B5B5B"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="175dp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="80sp"
                    android:layout_height="30sp"
                    android:layout_marginLeft="5sp"
                    android:layout_weight="1"
                    android:background="@drawable/hot"
                    android:gravity="center"
                    android:text="#落健"
                    android:textColor="#5B5B5B"
                    tools:layout_editor_absoluteX="31dp"
                    tools:layout_editor_absoluteY="211dp" />

            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20sp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="150sp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20sp"
                    android:layout_weight="1"
                    android:background="@drawable/back"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="120sp"
                        android:layout_height="70sp"
                        android:layout_marginBottom="30sp"
                        android:layout_marginLeft="5sp"
                        android:layout_marginTop="10sp"
                        android:layout_weight="1"
                        android:background="@drawable/imgboder1"
                        app:srcCompat="@drawable/pill" />

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="中文名稱:普拿疼"
                        android:textColor="#5B5B5B" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="英文名稱：abc"
                        android:textColor="#5B5B5B" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="120sp"
                        android:layout_height="1sp"
                        android:layout_marginLeft="5sp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="適應症：頭痛"
                        android:textColor="#5B5B5B" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="150sp"
                    android:layout_height="307dp"
                    android:layout_marginLeft="20sp"
                    android:background="@drawable/back"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="120sp"
                        android:layout_height="70sp"
                        android:layout_marginBottom="30sp"
                        android:layout_marginLeft="5sp"
                        android:layout_marginTop="10sp"
                        android:layout_weight="1"
                        android:background="@drawable/imgboder1"
                        app:srcCompat="@drawable/pill2" />

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="中文名稱:斯斯感冒"
                        android:textColor="#5B5B5B" />

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="英文名稱:rrrtr"
                        android:textColor="#5B5B5B" />

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="適應症:感冒"
                        android:textColor="#5B5B5B" />

                </LinearLayout>
            </LinearLayout>

        </TableRow>

    </TableLayout>

</android.support.constraint.ConstraintLayout>
